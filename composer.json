{
  "name": "tappleby/laravel-oauth2-server",
  "description": "Wrapper around bshaffer/oauth2-server-php library for use with Laravel 4.",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/tappleby/laravel-oauth2-server-common.git"
    }
  ],
  "authors": [
    {
      "name": "Terry Appleby",
      "email": "terry.appleby@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.3.0",
    "illuminate/support": ">=4.0.0,<4.2",
    "illuminate/auth": ">=4.0.0,<4.2",
    "illuminate/database": ">=4.0.0,<4.2",
    "illuminate/routing": ">=4.0.0,<4.2",
    "bshaffer/oauth2-server-php": "v1.3",
    "bshaffer/oauth2-server-httpfoundation-bridge": "v1.0",
    "tappleby/laravel-oauth2-server-common": "dev-master"
  },
  "require-dev": {
    "mockery/mockery": "0.8.*",
    "phpunit/phpunit": "3.7.*"
  },

  "autoload": {
    "classmap": [
      "src/migrations"
    ],
    "psr-0": {
      "Tappleby\\OAuth2": "src/"
    }
  },
  "minimum-stability": "dev"
}